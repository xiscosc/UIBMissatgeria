<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">
<LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_message">
                <TextView android:id="@+id/message_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:gravity="end"
                    android:text="User name"
                    />
                <TextView android:id="@+id/message_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:text="20:40 10/10/1992"
                    />
            </RelativeLayout>

            <TextView android:id="@+id/message_body"
                android:layout_marginRight="@dimen/margin_message"
                android:layout_marginLeft="@dimen/margin_message"
                android:layout_marginBottom="@dimen/margin_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:autoLink="all"

                android:text="Message Content"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_attached_files"
                android:padding="10dp"
                android:textSize="12dp"
                android:elevation="2dp"
                android:id="@+id/button_files"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/margin_message"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="@dimen/margin_message"
            android:id="@+id/user_avatar"
            android:src="@drawable/user_avatar"
        />

    </LinearLayout>

    <View
        android:id="@+id/message_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chatBackgroud" />

</LinearLayout>

