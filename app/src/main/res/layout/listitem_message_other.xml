<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_other"
            android:layout_weight="1"
            android:elevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_message">
                <TextView android:id="@+id/message_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:gravity="end"
                    android:textColor="@android:color/white"
                    android:text="User name"
                    />
                <TextView android:id="@+id/message_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:textColor="@android:color/white"
                    android:text="20:40 10/10/1992"
                    />
            </RelativeLayout>

            <TextView android:id="@+id/message_body"
                android:layout_marginRight="@dimen/margin_message"
                android:layout_marginLeft="@dimen/margin_message"
                android:layout_marginBottom="@dimen/margin_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:autoLink="all"
                android:textColor="@android:color/white"
                android:text="Message Content"
                />

            <com.gc.materialdesign.views.ButtonRectangle
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:text="@string/view_attached_files"
                android:id="@+id/button_files" />


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="@dimen/margin_message"
            android:id="@+id/user_avatar"
            android:src="@drawable/user_avatar"
        />

    </LinearLayout>


