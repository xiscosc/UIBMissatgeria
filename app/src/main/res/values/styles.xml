<resources>

    <!-- Base application theme. -->



    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="actionModeBackground">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolBarTheme" parent="@style/Base.ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="subjectTheme" parent="toolBarTheme">
        <item name="android:textSize">@dimen/subjectSize</item>
    </style>


    <color name="transparent">#00000000</color>
    <color name="tab_highlight">#ff9ecfbf</color>
    <color name="primaryDark">#ff0050a8</color>
    <color name="primary">#0060A8</color>
    <color name="message">#ffd5d5d5</color>
    <color name="message_other">#0196F2</color>
    <color name="tabsScrollColor">@android:color/white</color>
    <color name="chatBackgroud">#E1F5FE</color>

    <dimen name="subjectSize">42dp</dimen>

</resources>
